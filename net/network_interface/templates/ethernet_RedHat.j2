{% if item.name is defined %}
NAME={{ item.name }}
{% endif %}
{% if item.nm_controlled is defined %}
NM_CONTROLLED={{ item.nm_controlled }}
{% endif %}
{% if item.bootproto == 'static' %}
DEVICE={{ item.device }}
BOOTPROTO=none
{% if item.address is defined %}
IPADDR={{ item.address }}
{% endif %}
{% if item.netmask is defined %}
NETMASK={{ item.netmask }}
{% endif %}
{% if item.gateway is defined %}
GATEWAY={{ item.gateway }}
{% endif %}
{% if item.dns is defined %}
{% for ns in item.dns  %}
DNS{{ loop.index }}={{ ns }}
{% endfor %}
{% endif %}
{% if item.domain is defined %}
DOMAIN={{ item.domain }}
{% endif %}
{% endif %}
{% if item.bootproto == 'dhcp' %}
DEVICE={{ item.device }}
BOOTPROTO=dhcp
{% endif %}
{% if item.onboot is defined %}
ONBOOT={{ item.onboot }}
{% endif %}
IPV6INIT=no
{% if item.type is defined %}
TYPE={{ item.type }}
{% endif %}
{% if item.bridge is defined %}
BRIDGE={{ item.bridge }}
{% endif %}
{% if item.peerdns is defined %}
PEERDNS={{ item.peerdns }}
{% endif %}
